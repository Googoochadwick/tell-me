{
  "name": "tell-me",
  "displayName": "Tell-me",
  "description": "Tells and teaches users coding concepts based on compiler and language diagnostics",
  "version": "0.0.1",
  "publisher": "your-name",
  "type": "module",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:diagnosticsView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tellMe.runCompiler",
        "title": "Tell Me: Analyze Compiler Errors"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "diagnosticsContainer",
          "title": "Tell-me",
          "icon": "media/placeH.svg"
        }
      ]
    },
    "views": {
      "diagnosticsContainer": [
        {
          "icon": "media/placeH.svg",
          "id": "diagnosticsView",
          "name": "Active File Diagnostics",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Tell-me",
      "properties": {
        "geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your Google Gemini API key for AI-powered diagnostics",
          "markdownDescription": "Enter your Google Gemini API key. Get one from [Google AI Studio](https://aistudio.google.com/app/apikey)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@google/genai": "^1.34.0"
  }
}