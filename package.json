{
  "name": "tell-me",
  "displayName": "Tell-me",
  "description": "Tells and teaches users coding concepts based on compiler and language diagnostics",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],

  "activationEvents": [
    "onView:diagnosticsView"
  ],

  "main": "./out/extension.js",

  "contributes": {

    "viewsContainers": {
      "activitybar": [
        {
          "id": "diagnosticsContainer",
          "title": "Tell-me",
          "icon": "media/placeH.svg"
        }
      ]
    },

    "views": {
      "diagnosticsContainer": [
        {
          "icon": "media/placeH.svg",
          "id": "diagnosticsView",
          "name": "Active File Diagnostics",
          "type": "webview"
        }
      ]
    }
  },

  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },

  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
